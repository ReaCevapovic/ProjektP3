<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Naziv serije:"
            android:textAllCaps="true"
            android:textSize="40px"
            android:background="@color/colorPrimary"
            android:textColor="#006064"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/nazivSerije"
            android:layout_below="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="15dp"
            android:textAlignment="center"
            android:background="@color/colorPrimaryDark"
            android:textColor="#006064"
            />

        <TextView
            android:id="@+id/text2"
            android:layout_below="@+id/nazivSerije"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Å½anr:"
            android:textAllCaps="true"
            android:textSize="40px"
            android:background="@color/colorPrimary"
            android:textColor="#006064"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/zanr"
            android:layout_below="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="15dp"
            android:textAlignment="center"
            android:background="@color/colorPrimaryDark"
            android:textColor="#006064"/>

        <TextView
            android:id="@+id/text3"
            android:layout_below="@+id/zanr"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Redatelj:"
            android:textAllCaps="true"
            android:textSize="40px"
            android:background="@color/colorPrimary"
            android:textColor="#006064"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/redatelj"
            android:layout_below="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="15dp"
            android:textAlignment="center"
            android:background="@color/colorPrimaryDark"
            android:textColor="#006064"/>

        <TextView
            android:id="@+id/text4"
            android:layout_below="@+id/redatelj"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Jezik serije:"
            android:textAllCaps="true"
            android:textSize="40px"
            android:background="@color/colorPrimary"
            android:textColor="#006064"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/jezik"
            android:layout_below="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="15dp"
            android:textAlignment="center"
            android:background="@color/colorPrimaryDark"
            android:textColor="#006064"/>

        <TextView
            android:id="@+id/text5"
            android:layout_below="@+id/jezik"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Dodatni opis:"
            android:textAllCaps="true"
            android:textSize="40px"
            android:background="@color/colorPrimary"
            android:textColor="#006064"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/anotacija"
            android:layout_below="@+id/text5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="10dp"
            android:textAlignment="center"
            android:background="@color/colorPrimaryDark"
            android:textColor="#006064"/>

    </RelativeLayout>

</LinearLayout>